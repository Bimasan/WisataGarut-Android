<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kujang1"
     android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="140dp"
    tools:context=".Wisata" >
    
     <Button
	      android:id="@+id/buttongarut"
	       style="@style/ButtonText"
	       android:layout_alignParentLeft="true"
	       android:layout_below="@+id/imageView1"
	       android:background="@drawable/buttonhitam"
	       android:text="Garut" />
	 
	   <Button

	       android:id="@+id/buttonwisata"
	       style="@style/ButtonText"
	       android:layout_alignParentLeft="true"
	       android:layout_below="@+id/buttongarut"
	       android:background="@drawable/buttonhitam"
	       android:text="Wisata" />

 <Button

	       android:id="@+id/buttonabout"
	       style="@style/ButtonText"
	       android:layout_alignParentRight="true"
	       android:layout_below="@+id/buttonwisata"
	       android:background="@drawable/buttonhitam"
	       android:text="About" />
 
	   <Button

	       android:id="@+id/buttonexit"
	       style="@style/ButtonText"
	       android:layout_alignParentRight="true"
	       android:layout_below="@+id/buttonabout"
	       android:background="@drawable/buttonhitam"
	       android:text="Exit" />

	   <TextView
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_above="@+id/buttongarut"
	       android:layout_alignLeft="@+id/buttongarut"
	       android:layout_marginBottom="18dp"
	       android:text="@string/hello_world" />

</RelativeLayout>